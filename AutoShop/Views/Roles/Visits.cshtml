@model IEnumerable<AutoShop.Models.InfoVisit>

@{
    ViewBag.Title = "Роли";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Посещения</h2>
<table class="table">
    <tr>
        <th> Дата и время посещения</th>
        <th> Пользователь </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
                @Html.HiddenFor(modelItem => item.Id)
            <td>
                @Html.DisplayFor(modelItem => item.VisitDate)
            </td>
                @Html.HiddenFor(modelItem => item.ApplicationUserId)
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationUser.Email)
            </td>
            <td>
                @Html.ActionLink("Редактировать ", "EditVisits", new { id = item.Id })
                @Html.ActionLink("Удалить", "DeleteVisits", new { id = item.Id })
            </td>
</tr>
        
    }

</table>

